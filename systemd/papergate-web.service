[Unit]
Description=paperGate Web Interface (includes RSS feed reader)
After=network.target papergate.service
Requires=papergate.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/paperGate/web
Environment="FLASK_APP=app.py"
ExecStart=/usr/bin/python3 -m flask run --host=0.0.0.0 --port=5000
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
