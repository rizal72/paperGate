# Set to the appropriate driver for your Waveshare e-paper display
DRIVER = "epd2in7b_V2"

# Set to True to enable debug messages
DEBUG = False

# ** Leave commented to log to console **
# LOGFILE = '/home/pi/epd.log'

# Path to the logo to print on the `system` screen
# ** Must be a black and white 45x45 image file **
LOGO = '/home/pi/paperGate/images/raspberry-pi.png'

# Monospace fonts are recommended, as the text wrapping is based on character length
FONT = '/usr/share/fonts/truetype/dejavu/DejaVuSansMono.ttf'

# How long to wait (in seconds) before automatically redrawing the screen
TIME = 900

# Network interface for local IP detection (e.g., 'eth0' for ethernet, 'wlan0' for WiFi)
NETWORK_INTERFACE = 'eth0'

# Note: you *must* define at least one calendar to use the 'calendar' screen,
#       and at least one caldav calendar to use the 'tasks' screen.
CALENDAR_URLS = [
    { 'type': 'webcal', 'url': '<enter your webcal address>' },
    { 'type': 'caldav', 'url': '<enter your caldav address>', 'username': '<caldav username>', 'password': '<caldav password>' },
]

# How long to wait before pulling the calendar events from the web again
CALENDAR_REFRESH = 900

# Default timezone to use for calendar and tasks screens
TIMEZONE = Europe/Rome

# See the `screens` directory for available screens, or create your own (see the wiki)
# Recommended order: dashboard first for at-a-glance info, then detail screens
SCREENS = [
    'dashboard',       # Combined view: time, weather, calendar
    'system',         # Raspberry Pi info: model, OS, IP, temp, uptime
    'tailscale',      # VPN status, IPs, exit node, connected peers
    'system_dashboard',  # Visual monitoring: CPU, memory, temp, disk pie charts
    'weather',        # Current weather from Met.no with SVG icons
    'calendar',       # Upcoming calendar events with times
    'webview',        # Shows RSS feed from web interface
    'fortune',        # Random fortune cookies
]

# The affirmations to display, include anything that would help to be occasionally reminded of!
AFFIRMATIONS = [
    '<list your affirmations here>',
]

# Weather configuration - Met.no provider (Norwegian Meteorological Institute)
# Free, no API key required, works worldwide
WEATHER_LATITUDE = 45.4642   # Example: Milan, Italy
WEATHER_LONGITUDE = 9.1900
WEATHER_CITY_NAME = "Milano"  # City name to display
WEATHER_CONTACT_EMAIL = "your.email@example.com"  # Required by Met.no Terms of Service
# Refresh interval in seconds for weather updates
WEATHER_REFRESH = 900  # 15 minutes

# Fortune command path
FORTUNE_PATH = '/usr/games/fortune'

# Webview screen configuration
WEBVIEW_URL = 'http://localhost:5000/feed'  # Integrated RSS feed reader
WEBVIEW_RELOAD_INTERVAL = 300  # Seconds between auto-refreshes (5 minutes)
WEBVIEW_SCALE = 0.8  # Scale factor: 0.5 = shows 2x content, 0.25 = shows 4x content (smaller text)
WEBVIEW_ORIENTATION = 'landscape'  # 'landscape' or 'portrait' - how the webpage is rendered

# Web Interface Configuration
# Flask secret key for session management
# Generate with: python3 -c 'import os; print(os.urandom(16))'
SECRET_KEY = b'your-secret-key-here'

# HTTP Basic Auth credentials
# IMPORTANT: Change these default values!
AUTH_USERNAME = 'admin'
AUTH_PASSWORD = 'changeme'

# RSS Feed URLs for feed reader
FEEDS = [
    'https://www.ansa.it/sito/ansait_rss.xml',  # ANSA Italia
    # Add more feeds here
]
